<div class="form-group">
    <label> Numéro de client : </label>
    <input name="noClient"  type="text"  size="18" value="{{donnees.noClient | default('')}}" class="form-control {% if erreurs.noClient is defined %} is-invalid {% endif %}" >
    {% if erreurs.noClient is defined %}
        <div class="bg-danger"> {{ erreurs.noClient }} </div>
    {% endif %}
</div>
<br>
<div class="form-group">
    <label> Catégorie : </label>
    <div>
        <input type="radio" id="categorie_1" name="categorie[]" value="Mineur" onclick="changeGender(this.id);" class="form-control">
        <label for="categorie_1"> Mineur </label>
    </div>
    <div>
        <input type="radio" id="categorie_2" name="categorie[]" value="Majeur" onclick="changeGender(this.id);" class="form-control">
        <label for="categorie_2"> Majeur </label>
    </div>
    {% if erreurs.categorie is defined %}
        <div class="bg-danger"> {{ erreurs.categorie }} </div>
    {% endif %}
</div>
<br>
<div class="form-group">
    <label> Nom : </label>
    <input name="nom"  type="text"  size="18" value="{{donnees.nom | default('')}}" class="form-control {% if erreurs.nom is defined %} is-invalid {% endif %}" >
    {% if erreurs.nom is defined %}
        <div class="bg-danger"> {{ erreurs.nom }} </div>
    {% endif %}
</div>
<br>
<div class="form-group">
    <label> Prénom : </label>
    <input name="prenom"  type="text"  size="18" value="{{donnees.prenom | default('')}}" class="form-control {% if erreurs.prenom is defined %} is-invalid {% endif %}" >
    {% if erreurs.prenom is defined %}
        <div class="bg-danger"> {{ erreurs.prenom }} </div>
    {% endif %}
</div>
<br>
<div class="form-group">
    <label> Date de naissance : </label>
    <input name="dateNaissance"  type="date"  size="18"  value="{{donnees.dateNaissance | default('') | date('d-m-Y') }}" class="form-control {% if erreurs.dateNaissance is defined %} is-invalid {% endif %}">
    {% if erreurs.dateNaissance is defined %}
        <div class="bg-danger"> {{ erreurs.dateNaissance }} </div>
    {% endif %}
</div>
<br>

{% if button is defined and button == 'Modifier' %}
    <input type="hidden" name="_method" value="PUT">
    <input type="hidden" name="membre_id" value="{{ donnees.id | default('') }}">
{%  endif %}

<input type="hidden" name="token" value="{{ csrf_token('form_membre_famille') }}">

<button type="submit" class="btn btn-primary">{{ button|default('Valider') }}</button>