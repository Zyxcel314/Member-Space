{% extends 'base.html.twig' %}

{% block body %}
    <h1>Connexion</h1>

    {% if error %}
        <h3><bold>L'email ou le mot de passe est erron√©</bold></h3><br><br>
    {% endif %}

    <form action="{{ path('securityLogin') }}" method="post">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Email" required name="_username">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Mot de passe" required name="_password">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Se connecter</button>
        </div>
    </form>
{% endblock %}