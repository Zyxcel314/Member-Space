
{% block body %}
    {% include 'gestionnaire/espace.html.twig' %}
    <div class="container">
        <form method="get" action="{{ path('Gestionnaire.showListeGestionnaires') }}">
            <legend>Modifier un role</legend>



            <div class="form-group">
                <label>Role :</label>
                <select name="role" class="form-control ">

                    <option value="user">Veuillez sélectionner un role</option>
                        <option value="Gestionnaire">
                            Complets
                        </option>
                    <option value="User">
                            Limités
                    </option>

                </select>

            </div>


            <input type="hidden" name="id" value="{{ donnees.id | default('')}}">



            <button type="submit" class="btn btn-primary">{{ button|default('Valider') }}</button>

        </form>
    </div>
{% endblock %}