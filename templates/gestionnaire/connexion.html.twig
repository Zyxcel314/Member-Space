{% extends 'base.html.twig' %}

{% block title %}Identification{% endblock %}

{% block body %}
<form   method="post" class="w-50 p-3 shadow p-3 mb-5 bg-white" >
    {% if error %}
        <div class="alert alert-primary">Vous êtes sur le formulaire de connection gestionnaire.</div>
    {% endif %}

    {% if app.user %}
    <div class="mb-3">
        Vous êtes déja connecté en tant que {{ app.user.username }}, <a href="{{ path('deconnexion') }}">Déconnexion</a>
    </div>
    {% else %}

    <h1 class="h3 mb-3 font-weight-normal">Identification</h1>
    <div class="form-group">
        <label for="inputLogin" >Login</label>
        <input type="text" value="{{ last_username }}" name="nom" id="inputNom" class="form-control" placeholder="Entrez votre nom" required autofocus>
    </div>
    <div class="form-group">
        <label for="inputMotDePasse">Mot de passe</label>
        <input type="password" name="motDePasse" id="inputMotDePasse" class="form-control" placeholder="Entrez votre mot de passe" required>
    </div>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn  btn-success" type="submit">
        S'identifier
    </button>
</form>
    {% endif %}
    {% endblock %}
