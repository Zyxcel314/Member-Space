{% extends 'base.html.twig' %}
{% block title %} Modifier un membre - Odyssée du cirque {% endblock %}

{% block body %}
    <div>
        <h2 class="mx-5 my-3"> Membres de votre famille </h2>
        {% include 'front_office/representant_famille/espaceRepresentant.html.twig' %}
    </div>
    <div class="mx-5 my-3 shadow-lg p-3 bg-white rounded">
        <h3 class="w-100"> Modifier un membre de votre famille </h3>
        <div class="my-3">
            <form class="mr-3 d-inline" action="{{ path("Membre.show") }}">
                <button type="submit" class="btn btn-secondary"> Retourner à la liste des membres </button>
            </form>
        </div>
        {{ form_start(form) }}
        {{ include('form/_formMembre.html.twig', {'button_label': 'Modifier'}) }}
        {{ form_end(form) }}
    </div>
{% endblock %}