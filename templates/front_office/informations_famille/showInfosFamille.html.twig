{% extends 'base.html.twig' %}
{% block title %} Informations familiales - Odyssée du cirque{% endblock %}

{% block body %}
    <div>
        <h2 class="mx-5 my-3"> Mon espace </h2>
        {% include 'front_office/representant_famille/espaceRepresentant.html.twig' %}
    </div>
    <div class="row my-3 mx-5 shadow-lg bg-white">
        {% if infosFamille is empty %}
            <div class="m-3 w-100">
                <h3 class="text-danger"> Les informations concernant votre famille n'ont pas été renseignées ! </h3>
                <form class="mr-3 d-inline" action="{{ path("InfosFamille.add") }}">
                    <button type="submit" class="btn btn-warning"> Ajouter vos informations familiales </button>
                </form>
            </div>
        {% else %}
            <div class="m-3 w-100">
                <h3> Vos informations familiales </h3>
                <form class="mr-3 d-inline" action="{{ path("Representant.accueil") }}">
                    <button type="submit" class="btn btn-secondary"> Retourner à votre espace </button>
                </form>
                <form class="mr-3 d-inline" action="{{ path("InfosFamille.edit") }}">
                    <button type="submit" class="btn btn-success"> Modifier vos informations familiales </button>
                </form>
                <form class="mr-3 d-inline" action="{{ path("InfosFamille.delete") }}">
                    <button type="submit" class="btn btn-danger"> Supprimer vos informations familiales </button>
                </form>
            </div>
            <table class="table">
                <tbody>
                    <tr>
                        <th> Numéro allocataire </th>
                        <td>{{ infosFamille.noAllocataire }}</td>
                    </tr>
                    <tr>
                        <th> Nom CAF </th>
                        <td>{{ infosFamille.nomCAF }}</td>
                    </tr>
                    <tr>
                        <th> Nombre d'enfants </th>
                        <td>{{ infosFamille.nbEnfants }}</td>
                    </tr>
                    <tr>
                        <th> Situation familiale </th>
                        <td>
                            {% if infosFamille.estMonoparentale == 0 %}
                                <p class="m-0 p-0"> N'est pas monoparentale </p>
                            {% elseif infosFamille.estMonoparentale == 1  %}
                                <p class="m-0 p-0"> Monoparentale </p>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th> Régime de protection sociale </th>
                        <td>{{ infosFamille.regimeProtectionSociale }}</td>
                    </tr>
                </tbody>
            </table>
        {% endif %}
    </div>
{% endblock %}