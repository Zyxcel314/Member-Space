{% extends 'base.html.twig' %}

{% block body %}
<h1>Odyssée du cirque</h1>
<p>Bienvenue sur la page d'accueil de l'odyssée du cirque</p>

    {% for message in app.flashes('succes') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('echecs') %}
        <div class="alert alert-warning">
            {{ message }}
        </div>
    {% endfor %}
{% endblock %}