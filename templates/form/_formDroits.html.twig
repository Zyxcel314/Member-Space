    <form>
    <div class="form-group">
        <label> Consulter un compte adhérent </label>
        <input name="selected_droits[]" value="RP_VOIR" type="checkbox"
                {% if dispositions_gestionnaire is defined %}
                    {% for droits in dispositions_gestionnaire %}
                        {% if droits.getDroits().getCode() == 'RP_VOIR' %}
                            checked
                        {% endif %}
                    {% endfor %}
                {% endif %}
        >
    </div>

    <div class="form-group">
        <label> Créer un compte adhérent </label>
        <input name="selected_droits[]" value="RP_AJOUT" type="checkbox"
                {% if dispositions_gestionnaire is defined %}
                    {% for droits in dispositions_gestionnaire %}
                        {% if droits.getDroits().getCode() == 'RP_AJOUT' %}
                            checked
                        {% endif %}
                    {% endfor %}
                {% endif %}
        >
    </div>

    <div class="form-group">
        <label> Modifier un compte adhérent </label>
        <input name="selected_droits[]" value="RP_MODIF" type="checkbox"
                {% if dispositions_gestionnaire is defined %}
                    {% for droits in dispositions_gestionnaire %}
                        {% if droits.getDroits().getCode() == 'RP_MODIF' %}
                            checked
                        {% endif %}
                    {% endfor %}
                {% endif %}
        >
    </div>

    <div class="form-group">
        <label> Supprimer un compte adhérent </label>
        <input name="selected_droits[]" value="RP_SUPPR" type="checkbox"
                {% if dispositions_gestionnaire is defined %}
                    {% for droits in dispositions_gestionnaire %}
                        {% if droits.getDroits().getCode() == 'RP_SUPPR' %}
                            checked
                        {% endif %}
                    {% endfor %}
                {% endif %}
        >
    </div>

    <div class="form-group">
        <label> Consulter les dossiers des adhérents </label>
        <input name="selected_droits[]" value="INFOS_VOIR" type="checkbox"
                {% if dispositions_gestionnaire is defined %}
                    {% for droits in dispositions_gestionnaire %}
                        {% if droits.getDroits().getCode() == 'INFOS_VOIR' %}
                            checked
                        {% endif %}
                    {% endfor %}
                {% endif %}
        >
    </div>

    <div class="form-group">
        <label> Créer les dossiers des adhérents </label>
