                {% if dispositions_gestionnaire is defined %}
                    {% for droits in dispositions_gestionnaire %}
                        {% if droits.getDroits().getCode() == 'INFOS_MODIF' %}
                            checked
                        {% endif %}
                    {% endfor %}
                {% endif %}
        >
    </div>

    <div class="form-group">
        <label> Supprimer les dossiers des adhérents </label>
        <input name="selected_droits[]" value="INFOS_SUPPR" type="checkbox"
                {% if dispositions_gestionnaire is defined %}
                    {% for droits in dispositions_gestionnaire %}
                        {% if droits.getDroits().getCode() == 'INFOS_SUPPR' %}
                            checked
