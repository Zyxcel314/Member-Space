 <div class="col p-0 pr-3">
     {{ form_start(form) }}
     <h4> Compte </h4>
     {{ form_row(form.mail, {'label': 'Adresse mail : '}) }}
     {{ form_row(form.motDePasse, {'label': 'Mot de passe : '}) }}
     {{ form_row(form.confirmermdp, {'label': 'Confirmez votre mot de passe : '}) }}
     <small id="pass" class="form-text text-muted"> Veuillez confirmer votre mot de passe </small>
 </div>
 <div class="col p-0 pl-3">
     <h4> Informations personnelles </h4>
     {{ form_row(form.nom, {'label': 'Nom : '}) }}
     {{ form_row(form.prenom, {'label': 'Prénom : '}) }}
     <div class="form-row">
         <div class="col-md mb-3">
             {{ form_row(form.codePostal, {'label': 'Code postal : '}) }}
         </div>
         <div class="col-md mb-3">
             {{ form_row(form.ville, {'label': 'Ville : '}) }}
         </div>
     </div>
     {{ form_row(form.adresse, {'label': 'Adresse : '}) }}
     {{ form_row(form.noFixe, {'label': 'Numéro de fixe : '}) }}
     {{ form_row(form.noMobile, {'label': 'Numéro de mobile : '}) }}
     {{ form_row(form.dateNaissance, {'label': 'Date de naissance : '}) }}
     {% if is_granted('ROLE_ADMIN') %}
         {{ form_row(form.dateFinAdhesion, {'label': 'Date de fin d\'adhésion : '}) }}
         {{ form_row(form.estActive, {'label': 'Le compte a-t-il été activé ? '}) }}
     {% endif %}
     {{ form_row(form._token) }}
     <button class="btn btn-primary"> {{ button_label | default('Confirmer') }} </button>
 </div>
 <input type="hidden" name="token" value="{{ csrf_token('representant_famille') }}"/>
