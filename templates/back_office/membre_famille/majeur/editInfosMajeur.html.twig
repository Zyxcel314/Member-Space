{% extends 'base.html.twig' %}
{% block title %} Ajouter des informations du majeur - Odyssée du cirque {% endblock %}

{% block body %}
    <div>
        <h2 class="mx-5 my-3"> Espace du représentant {{ representant.nom }} {{ representant.prenom }} </h2>
        {% include 'back_office/gestionnaire/espaceGestionnaire.html.twig' %}
    </div>
    <div class="mx-5 my-3 shadow-lg p-3 bg-white rounded">
        <h3 class="w-100"> Modifier les informations du majeur {{ membre.nom }} {{ membre.prenom }} </h3>
        <div class="my-3">
            <form class="mr-3 d-inline" action="{{ path("Gestionnaire.InfosMajeur.show", {id: representant.id, idMembre: membre.id}) }}">
                <button type="submit" class="btn btn-secondary"> Retourner à la liste des informations </button>
            </form>
        </div>
        {{ form_start(form) }}
        {{ include('form/_formInfosMajeur.html.twig', {'button_label': 'Modifier'}) }}
        {{ form_end(form) }}
    </div>
{% endblock %}