{% extends "base.html.twig" %}
{% block title %} Droits des gestionnaires - Odyssée du cirque {% endblock %}

{% block body %}
    <div>
        <h2 class="mx-5 my-3"> Espace gestionnaire </h2>
        {% include 'back_office/gestionnaire/espaceGestionnaire.html.twig' %}
    </div>
    <div class="row my-3 mx-5 shadow-lg bg-white">
        <div class="m-3 w-100">
            <h3> Droits des gestionnaires </h3>
            <form class="mr-3 d-inline" action="{{ path("Gestionnaire.ListeGestionnaires.show") }}">
                <button type="submit" class="btn btn-secondary"> Retourner à la liste des gestionnaires </button>
            </form>
        </div>
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th> ID </th>
                    <th> Code </th>
                    <th> Libellé </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td> {{ dispositions.getDroits().id }} </td>
                    <td> {{ dispositions.getDroits().code }} </td>
                    <td> {{ dispositions.getDroits().libelle }} </td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}